<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/4026a653d4.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="styles.css" />
    <title>encryptor</title>
  </head>
  <body>
    <div id="wrapper">
      <div id="form-wrapper">
        <!-- encrypt data -->
        <div class="shadow shadow-enc">
          <i class="fa-regular fa-copy noselect"></i>
        </div>
        <textarea class="para black-text" rows="4" cols="8" id="encrypt-para" disabled></textarea>

        <form method="POST" action="/api/encrypt">
          <div id="encrypt-container">
            <textarea rows="8" type="text" name="encrypt" id="encrypt-input" maxlength="250" placeholder="Type or paste a message"></textarea>
            <div id="r16" class="radio-container">
              <input type="radio" class="radiobtn 16" name="keylen" id="sixteen">
              <label class="noselect" for="sixteen">16-bit</label>
            </div>
            <div id="r32" class="radio-container chosen">
              <input type="radio" class="radiobtn 32" name="keylen" checked id="thirtytwo">
              <label class="noselect" for="thirtytwo">32-bit</label>
            </div>
            <input type="button" class="btn" id="encrypt" value="Encrypt"/>
          </div>
        </form>
        <!-- decrypt data -->
        <div class="shadow shadow-dec">
          <i class="fa-regular fa-copy"></i>
        </div>
        <textarea class="para black-text" rows="4" cols="8" id="decrypt-para" disabled></textarea>

        <form method="POST" action="/api/decrypt">
          <div id="decrypt-container">
            <textarea rows="8" type="text" name="decrypt" id="decrypt-input" maxlength="250" placeholder="Type or paste the encrypted message"></textarea>
            <input type="button" class="btn" id="decrypt" value="Decrypt"/>
          </div>
        </form>
      </div>
    </div>
  </body>
  <script type="module" src="main.js"></script>
</html>
